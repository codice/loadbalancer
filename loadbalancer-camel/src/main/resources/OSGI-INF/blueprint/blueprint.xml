<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
    xmlns:cxf="http://cxf.apache.org/blueprint/core"
    xmlns:camel="http://camel.apache.org/schema/blueprint"
    xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
             " >

    <camel:camelContext id="camelHttpContext" >
    </camel:camelContext>

    <camel:camelContext id="camelHttpsContext" >
    </camel:camelContext>
   

    <!-- Create a singleton instance of the HTTP Load Balancer -->

    <bean
        id="httpLoadBalancer"
        class="org.codice.loadbalancer.camel.HttpLoadBalancer"
        destroy-method="destroy"
        init-method="init"
        scope="singleton" >
        <cm:managed-properties
            persistent-id="org.codice.loadbalancer.camel.HttpLoadBalancer"
            update-method="updateCallback"
            update-strategy="component-managed" />

        <argument ref="camelHttpContext" />
    </bean>

    <bean
        id="httpsLoadBalancer"
        class="org.codice.loadbalancer.camel.HttpsLoadBalancer"
        destroy-method="destroy"
        init-method="init"
        scope="singleton" >
        <property name="bundleContext" ref="blueprintBundleContext" />
        <cm:managed-properties
            persistent-id="org.codice.loadbalancer.camel.HttpsLoadBalancer"
            update-method="updateCallback"
            update-strategy="component-managed" />

        <argument ref="camelHttpsContext" />
    </bean>

</blueprint>